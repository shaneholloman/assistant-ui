{
  "name": "@assistant-ui/core",
  "version": "0.0.1",
  "description": "Framework-agnostic core runtime for assistant-ui",
  "keywords": [
    "assistant",
    "ai",
    "chat",
    "runtime",
    "framework-agnostic"
  ],
  "author": "AgentbaseAI Inc.",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "aui-source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./internal": {
      "aui-source": "./src/internal.ts",
      "types": "./dist/internal.d.ts",
      "default": "./dist/internal.js"
    },
    "./store": {
      "aui-source": "./src/store/index.ts",
      "types": "./dist/store/index.d.ts",
      "default": "./dist/store/index.js"
    },
    "./store/internal": {
      "aui-source": "./src/store/internal.ts",
      "types": "./dist/store/internal.d.ts",
      "default": "./dist/store/internal.js"
    },
    "./*": {
      "aui-source": "./src/*.ts",
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "aui-build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@assistant-ui/tap": "^0.4.6",
    "assistant-stream": "^0.3.2",
    "nanoid": "^5.1.5"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@assistant-ui/x-buildutils": "workspace:*",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "https://www.assistant-ui.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/assistant-ui/assistant-ui.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/assistant-ui/assistant-ui/issues"
  }
}
