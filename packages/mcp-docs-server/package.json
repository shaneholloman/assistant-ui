{
  "name": "@assistant-ui/mcp-docs-server",
  "version": "0.1.16",
  "description": "MCP server for assistant-ui documentation and examples",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "assistant-ui-mcp": "./dist/stdio.js"
  },
  "scripts": {
    "clean": "tsx scripts/clean.mts",
    "prepare-docs": "cross-env PREPARE=true node ./dist/prepare-docs/prepare.js",
    "build:cli": "tsup src/stdio.ts src/prepare-docs/prepare.ts src/index.ts --format esm --treeshake=smallest --splitting",
    "build": "pnpm clean && pnpm build:cli && pnpm prepare-docs",
    "dev": "tsx src/stdio.ts",
    "pretest": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.13",
    "gray-matter": "^4.0.3",
    "cross-env": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "files": [
    "dist",
    ".docs",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/assistant-ui/assistant-ui/tree/main/packages/mcp-docs-server"
  },
  "bugs": {
    "url": "https://github.com/assistant-ui/assistant-ui/issues"
  }
}
